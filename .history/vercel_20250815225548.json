{
    "buildCommand": "npm run build",
    "installCommand": "npm install",
    "outputDirectory": "apps/web/dist",
    "functions": {
        "apps/api/src/server.ts": {
            "maxDuration": 30
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/apps/api/src/server.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/apps/web/dist/$1"
        }
    ]
}
