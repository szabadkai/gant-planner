{
  "name": "gant-monorepo",
  "private": true,
  "workspaces": [
    "apps/web",
    "apps/api"
  ],
  "scripts": {
    "dev": "concurrently -n api,web -c blue,green \"npm:dev -w apps/api\" \"npm:dev -w apps/web\"",
    "dev:api": "npm run dev -w apps/api",
    "dev:web": "npm run dev -w apps/web",
    "build": "npm run build -w apps/api && npm run build -w apps/web",
    "start": "npm run start -w apps/api && npm run start -w apps/web",
    "vercel-build": "npm run build -w apps/web && npm run build -w apps/api",
    "test": "npm run test -w apps/api && npm run test -w apps/web",
    "test:coverage": "npm run test:coverage -w apps/api && npm run test:coverage -w apps/web",
    "lint": "eslint apps/*/src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint apps/*/src --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"apps/*/src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"apps/*/src/**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2"
  }
}
